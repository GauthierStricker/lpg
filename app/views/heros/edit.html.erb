<%= simple_form_for(@hero) do |f| %>
  <%= f.input :name %>
  <%= f.input :weight %>
  <%= f.input :total_money %>
  <%= cl_image_tag @hero.avatar, height: 75, width: 75, crop: :fill, :radius => "max" %>
  <%= f.input :avatar %>
  <%= f.input :avatar_cache, as: :hidden %>
  <%= f.submit %>
<% end %>
